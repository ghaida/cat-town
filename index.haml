<!doctype html>
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
        %title welcome to the cat town
        %link{:href => "/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}
        %link{:href => "/favicon.ico", :rel => "icon", :type => "image/x-icon"}
        %link{:href => "css/swag.css", :rel => "stylesheet"}
        %link{:href => "//cdn.jsdelivr.net/emojione/1.5.2/assets/css/emojione.min.css", :rel => "stylesheet"}
  %body
    .wrapper.convert-emoji
      .content-container
        .main-content
          %h1 Welcome to the cat town
          %img{:src => "img/cat-town.gif", :alt => "welcome to the cat town"}
          %p.blink :cat: It's the cat town :cat:

          %p.notes :notes:

          %h2 Welcome to the cat town
          %img{:src => "img/reservoir-cats.gif"}
          %p.blink :cat: It's the cat town :cat:

          %p.notes :notes:

          %h3 Welcome to the cat town
          %img{:src => "img/racoon.jpg"}
          %p.raccoon :eyes: raccoon :eyes:
    %footer
      %p.convert-emoji :heart:

    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"}
    %script{:src => "//cdn.jsdelivr.net/emojione/1.5.2/lib/js/emojione.min.js"}

    :javascript
      $(document).ready(function() {
        $(".convert-emoji").each(function() {
          var original = $(this).html();
          // use .shortnameToImage if only converting shortnames (for slightly better performance)
          var converted = emojione.toImage(original);
          $(this).html(converted);
        });
      });
